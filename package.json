{
	"name": "coinmarketcap-s2l",
	"version": "1.1.0",
	"type": "module",
	"description": "Symbol to CoinMarketCap Link converter",
	"author": "Valentin Degenne",
	"keywords": [
		"coinmarketcap",
		"url",
		"link",
		"crypto"
	],
	"imports": {
		".": {
			"import": "./index.js",
			"types": "./lib/main.d.ts"
		}
	},
	"files": [
		"./lib/main.d.ts",
		"./index.js"
	],
	"devDependencies": {
		"@rollup/plugin-commonjs": "^26.0.1",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^11.1.6",
		"node-fetch": "^3.3.2",
		"rollup": "^4.20.0",
		"typescript": "^5.5.4",
		"wireit": "^0.14.7"
	},
	"scripts": {
		"build": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"fetch-coinmarketcap-data",
				"build:ts",
				"build:rollup"
			]
		},
		"fetch-coinmarketcap-data": {
			"command": "node ./scripts/fetch-coinmarketcap-data.js",
			"files": [
				"./scripts/fetch-coinmarketcap-data.js"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"dependencies": [
				"fetch-coinmarketcap-data"
			],
			"clean": "if-file-deleted",
			"files": [
				"./tsconfig.json",
				"./src"
			],
			"output": [
				"./lib"
			]
		},
		"build:rollup": {
			"command": "rollup -c",
			"dependencies": [
				"build:ts"
			],
			"files": [
				"./lib",
				"./rollup.config.js"
			],
			"output": [
				"./index.js"
			]
		}
	}
}
